<div class="box tabular">   
    <fieldset><legend><%=l(:label_tracker_plural)%></legend>
    <% @project.trackers.sorted.all.each do |tracker| %>
      <%= check_box_tag "project_custom_field[tracker_ids][]",
                        tracker.id,
                        (@custom_field.trackers.include? tracker),
                        :id => "custom_field_tracker_ids_#{tracker.id}" %>
      <label class="no-css" for="custom_field_tracker_ids_<%=tracker.id%>">
        <%= h(tracker.name) %>
      </label>
    <% end %>
    <%= hidden_field_tag "project_custom_field[tracker_ids][]", '' %>
    </fieldset>
    &nbsp;
    <p><%= f.check_box :share_with_subprojects %></p>
    <p><%= f.check_box :is_filter %></p>
    <p><%= f.check_box :searchable %></p>
    <% if CustomField.method_defined? :roles %>
      <p>
        <label><%= l(:field_visible) %></label>
        <label class="block">
          <%= radio_button_tag 'project_custom_field[visible]', 1, @custom_field.visible?, :id => 'project_custom_field_visible_on' %>
          <%= l(:label_visibility_public) %>
        </label>
        <label class="block">
          <%= radio_button_tag 'project_custom_field[visible]', 0, !@custom_field.visible?, :id => 'project_custom_field_visible_off' %>
          <%= l(:label_visibility_roles) %>:
        </label>
        <% Role.givable.sorted.each do |role| %>
	  <label class="block custom_field_role" style="padding-left:2em;">
	    <%= check_box_tag 'project_custom_field[role_ids][]', role.id, @custom_field.roles.include?(role) %>
	    <%= role.name %>
	  </label>
        <% end %>
        <%= hidden_field_tag 'project_custom_field[role_ids][]', '' %>
      </p>
    <% end %>
</div>

<% if CustomField.method_defined? :roles %>
  <%= javascript_tag do %>
  function toggleCustomFieldRoles(){
    var checked = $("#project_custom_field_visible_on").is(':checked');
    $('.custom_field_role input').attr('disabled', checked);
  }
  $("#project_custom_field_visible_on, #project_custom_field_visible_off").change(toggleCustomFieldRoles);
  $(document).ready(toggleCustomFieldRoles);
  <% end %>
<% end %>
