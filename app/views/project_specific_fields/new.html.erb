<h2><%= l(:label_custom_field_new) %></h2>

<%= labelled_form_for [@project, @custom_field], :url => {:controller => :project_specific_fields, :action => :create, :id => @project.identifier }, :html => {:id => 'custom_field_form'} do |f| %>
<%= render :partial => 'form', :locals => { :f => f } %>
<%= hidden_field_tag 'type', @custom_field.type %>
<% end %>

<%= javascript_tag do %>
$('#project_custom_field_field_format').change(function(){
  $.ajax({
    url: '<%= url_for(:action => :new, :format => 'js') %>',
    type: 'get',
    data: $('#custom_field_form').serialize()
  });
});
<% end %>

